<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecyclerViewItem">

    <Switch
        android:id="@+id/recycleViewItem_ToggleButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/recycleViewItem_NameTextview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recycleViewItem_NameTextview"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/recycleViewItem_NameTextview"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/recycleViewItem_SeekBar"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/recycleViewItem_NameTextview"
        app:layout_constraintEnd_toStartOf="@+id/recycleViewItem_ToggleButton"
        app:layout_constraintStart_toEndOf="@+id/recycleViewItem_NameTextview"
        app:layout_constraintTop_toTopOf="@+id/recycleViewItem_NameTextview" />
</android.support.constraint.ConstraintLayout>