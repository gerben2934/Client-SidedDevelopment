<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/parkeditem_streetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="StreetName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/parkeditem_dateParked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dateparked"
        app:layout_constraintStart_toStartOf="@+id/parkeditem_streetName"
        app:layout_constraintTop_toBottomOf="@+id/parkeditem_streetName" />

    <TextView
        android:id="@+id/parkeditem_timeParked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TimeParked"
        app:layout_constraintStart_toStartOf="@+id/parkeditem_dateParked"
        app:layout_constraintTop_toBottomOf="@+id/parkeditem_dateParked" />
</android.support.constraint.ConstraintLayout>