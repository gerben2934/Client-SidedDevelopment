<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.MainActivity">

    <fragment
        android:id="@+id/fragment_maps"
        android:name="nl.ralphrouwen.locationawareapp.Fragments.MapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout="@layout/fragment_map" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="200dp" />

    <ImageButton
        android:id="@+id/parkbutton"
        android:layout_width="86dp"
        android:layout_height="109dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:onClick="parkButtonPressed"
        android:scaleType="fitCenter"
        android:src="@drawable/parkbutton5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline6" />

    <fragment
        android:id="@+id/fragment_history"
        android:name="nl.ralphrouwen.locationawareapp.Fragments.HistoryFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parkbutton"
        app:layout_constraintVertical_bias="1.0"
        tools:layout="@layout/fragment_history" />

    <EditText
        android:id="@+id/editText_days"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/editText_hours"
        app:layout_constraintStart_toEndOf="@+id/parkbutton"
        app:layout_constraintTop_toTopOf="@+id/guideline6" />

    <EditText
        android:id="@+id/editText_hours"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/editText_days"
        app:layout_constraintEnd_toStartOf="@+id/editText_minutes"
        app:layout_constraintStart_toEndOf="@+id/editText_days"
        app:layout_constraintTop_toTopOf="@+id/editText_days"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText_minutes"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/editText_hours"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText_hours"
        app:layout_constraintTop_toTopOf="@+id/editText_hours"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textView_hours"
        app:layout_constraintEnd_toEndOf="@+id/editText_days"
        app:layout_constraintStart_toStartOf="@+id/editText_days"
        app:layout_constraintTop_toTopOf="@+id/textView_hours" />

    <TextView
        android:id="@+id/textView_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/textView_minutes"
        app:layout_constraintEnd_toEndOf="@+id/editText_hours"
        app:layout_constraintStart_toStartOf="@+id/editText_hours"
        app:layout_constraintTop_toTopOf="@+id/textView_minutes" />

    <TextView
        android:id="@+id/textView_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/editText_minutes"
        app:layout_constraintStart_toStartOf="@+id/editText_minutes"
        app:layout_constraintTop_toBottomOf="@+id/editText_minutes" />

